{{#if mensaje }}
    <h1>{{mensaje}}</h1>

{{else}}

<table class="table table-dark table-hover">
  <thead>
    <tr>
     
      <th scope="col">Title</th>
      <th scope="col">Price</th>
      <th scope="col">Thumbnail</th>
    </tr>
  </thead>
  <tbody>
      {{#each productos}}
    <tr>
    
          <td>{{title}}</td>
          <td>{{price}}</td>
          <td>{{thumbnail}}</td>
    </tr>
     {{/each}}
  </tbody>
</table>

{{/if}}